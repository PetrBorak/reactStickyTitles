@import "../../style/constants"

.dc-sticky-wrapper {
  padding-bottom: 1px;
  .dc-sticky.dc-sticky-fixed {
      position: fixed;
      top: 0;
      z-index: 9;
    }

  .dc-sticky.dc-sticky-transition {
    z-index: 9;
  }

  .dc-sticky.dc-sticky-filler {
    visibility: hidden;
  }

  .dc-sticky.dc-sticky-fixed, .dc-sticky.dc-sticky-transition {
    box-sizing: border-box;
    & > * {
      margin: 0;
    }
    .dc-sticky-content {
      position: relative;
      z-index: 8;
      height: 100%;
    }
  }

  .dc-sticky.dc-sticky-filler .dc-sticky-content {
    position: relative;
    z-index: 8;
    height: 100%;
  }

  .dc-sticky.dc-sticky-fixed:after, .dc-sticky.dc-sticky-transition:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 5%;
    width: 90%;
    height: 8%;
    border-radius: 50%;
    box-shadow: 0px -9px 25px black;
  }
}
